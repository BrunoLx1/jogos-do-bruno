<body>
    <div>
        <h1>Jogo de Mem√≥ria</h1>
        <div id="score">Pares encontrados: 0</div>
        <div id="game-board"></div>
        <button onclick="startGame()">Iniciar Jogo</button>
    </div>

    <script>
        const gameBoard = document.getElementById('game-board');
        const scoreDisplay = document.getElementById('score');
        let cards = [];
        let flippedCards = [];
        let matchedCards = [];
        let score = 0;

        const cardValues = ['üçé', 'üçå', 'üçâ', 'üçá', 'üçì', 'üçä', 'üçç', 'üçí'];

        // Embaralha os valores das cartas
        function shuffleArray(array) {
            return array.sort(() => Math.random() - 0.5);
        }

        // Cria as cartas para o jogo
        function createCards() {
            let cardArray = [...cardValues, ...cardValues];
            cardArray = shuffleArray(cardArray);

            cards = cardArray.map((value, index) => {
                const cardElement = document.createElement('div');
                cardElement.classList.add('card');
                cardElement.setAttribute('data-id', index);
                cardElement.dataset.value = value;

                cardElement.addEventListener('click', () => flipCard(cardElement));

                gameBoard.appendChild(cardElement);
                return cardElement;
            });
        }

        // Vira a carta
        function flipCard(card) {
            if (card.classList.contains('flipped') || flippedCards.length === 2) return;

            card.classList.add('flipped');
            card.textContent = card.dataset.value;

            flippedCards.push(card);

            if (flippedCards.length === 2) {
                checkForMatch();
            }
        }

        // Verifica se as cartas viradas s√£o iguais
        function checkForMatch() {
            const [card1, card2] = flippedCards;

            if (card1.dataset.value === card2.dataset.value) {
                card1.classList.add('matched');
                card2.classList.add('matched');
                matchedCards.push(card1, card2);
                score++;
                scoreDisplay.textContent = `Pares encontrados: ${score}`;
                flippedCards = [];

                if (matchedCards.length === cards.length) {
                    setTimeout(() => alert('Voc√™ venceu!'), 500);
                }
            } else {
                setTimeout(() => {
                    card1.classList.remove('flipped');
                    card2.classList.remove('flipped');
                    flippedCards = [];
                }, 1000);
            }
        }

        // Reinicia o jogo
        function startGame() {
            score = 0;
            scoreDisplay.textContent = `Pares encontrados: ${score}`;
            flippedCards = [];
            matchedCards = [];

            gameBoard.innerHTML = '';
            createCards();
        }

        // Inicia o jogo quando a p√°gina for carregada
        startGame();
    </script>
</body>
